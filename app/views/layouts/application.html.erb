<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= site_title %></title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<%= content_tag "body", data: { controller: params[:controller],
                                action:     params[:action] } do %>

<div id="header">
  <nav>
    <ul>
      <li>
        <%= link_to root_path do %>
          <%= image_tag "logo_inv_small.png", class: "logo" %>
        <% end %>
      </li>

      <% if current_user %>

        <li><%= link_to "Logout", logout_path %></li>
        <li><%= link_to "Post Item", new_post_path %></li>
        <li>
          <%= link_to "#" do %>
            <%= image_tag current_user.thumbnail_url, class: "user-icon small" %>
            <%= current_user.name %>
          <% end %>
        </li>

      <% else %>

        <li><%= link_to "Login", login_path %></li>
        <li><%= link_to "Post Item", new_post_path %></li>

      <% end %>

    </ul>
  </nav>
  <div style="clear: both;"></div>
</div>

<div class="container clearfix">
  <%= yield %>
</div>


<% end %>

</html>