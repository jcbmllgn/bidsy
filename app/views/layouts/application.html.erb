<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= site_title %></title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<%= content_tag "body", data: { controller: params[:controller],
                                action:     params[:action] } do %>

<div id="header">
  <nav>
    <%= link_to root_path, class: "logo" do %>
      <%= image_tag "logo_inv_small.png" %>
    <% end %>

    <ul class="clearfix">
      <% if current_user %>

        <li>
          <%= link_to "#" do %>
            <div style="background-image: url(<%= current_user.thumbnail_url %>);", class="user-icon small"></div>
            <%= current_user.name %>
          <% end %>
        </li>
        <li><%= link_to "Post Item", new_post_path %></li>
        <li><%= link_to "Logout", logout_path %></li>

      <% else %>

        <li><%= link_to "Post Item", new_post_path %></li>
        <li><%= link_to "Login", login_path %></li>

      <% end %>
    </ul>
  </nav>
</div>

<div class="container clearfix">
  <%= yield %>
</div>


<% end %>

</html>