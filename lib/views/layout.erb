<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bidsy.co - Sell Beautifully</title>
  <%= stylesheet_link_tag "/stylesheets/style.css" %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
</head>
<body>

<div id="header">
  <nav>
    <ul>
      <li>
        <a href="/">
          <%= image_tag "/images/logo_inv_small.png", id: "headerLogo" %>
        </a>
      </li>
<% if @profile %>
      <li>
        <a href="/logout">Logout</a>
      </li>
      <li>
        <a href="/post/new">Post Product</a>
      </li>
      <li>
        <a href="#">
          <img id="userIconSmall" src="<%= @profile['thumbnail_url'] %>">
          <%= @profile['name'] %>
        </a>
      </li>
<% else %>
      <li>
        <a href="/profile/new">Login</a>
      </li>
      <li>
        <a href="/post/new">Add Product</a>
      </li>
<% end %>
    </ul>
  </nav>
  <div style="clear: both;"></div>
</div>

<div id="container">
<%= yield %>
</div>


</body>
</html>