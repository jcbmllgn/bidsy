<div id="productLeftCol">
	<div class="productGallery">
		<%= image_tag @post.img_path %>
	</div>

	<div id="productDetials">
		<h1><%= @post.title %></h1>

		<div class="productStats">
			<div class="row">
					<p class="key">Manufacturer</p>
					<p class="value">Breville</p>
			</div>
			<div class="row">
				<p class="key">Dimensions</p>
				<p class="value">3ft x 1ft x 1ft</p>
			</div>
			<div class="row">
				<p class="key">Condtion</p>
				<p class="value">Like new</p>
			</div>
		</div>

		<p class="productParagraph"><%= @post.description %></p>

	</div>

</div>

<div id="productRightCol">
	<div class="widget bidWidget">
		<div class="row">
			<!-- MAKE A HELPER FOR THIS -->
			<p>Enter <span>$<%= @post.current_price + 1 %></span> or more:</p>
		</div>
		<div class="row amountRow">
			<input type="text" placeholder="$">
			<p>Current Bid: <span><%= @post.current_price %></span></p>
		</div>
		<a href="#">
			<div>Place bid</div>
		</a>
	</div>

</div>